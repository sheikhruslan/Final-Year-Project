# Environment Configuration for Fraud Detection System

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/fraud_detection_db
# Alternative: sqlite:///./fraud_detection.db for development

# Redis Configuration (for caching and task queue)
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI/LLM API Keys
OPENAI_API_KEY=your-openai-key-here
ANTHROPIC_API_KEY=your-anthropic-key-here

# OCR Configuration
AZURE_FORM_RECOGNIZER_ENDPOINT=your-azure-endpoint
AZURE_FORM_RECOGNIZER_KEY=your-azure-key
TESSERACT_PATH=C:\Program Files\Tesseract-OCR\tesseract.exe

# ML Model Configuration
MODEL_PATH=../models
XGBOOST_MODEL_FILE=fraud_detector_xgboost.json
MODEL_THRESHOLD=0.5

# Feature Engineering
BENFORD_THRESHOLD=0.05
RULE_BASED_CHECKS_ENABLED=True

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=[".pdf", ".png", ".jpg", ".jpeg", ".docx"]

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/fraud_detection.log

# Hong Kong Specific
HKFI_API_ENDPOINT=https://api.hkfi.org.hk/fraud-claims
HKFI_API_KEY=your-hkfi-api-key-here
